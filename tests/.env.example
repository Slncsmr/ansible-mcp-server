# VM Lifecycle Feature Test Environment Variables
# Copy this file to .env and customize for your environment

# MCP Server Configuration
MCP_SSE_URL=http://192.168.10.100:3001/sse
MCP_API_TOKEN=your-mcp-api-token-here

# Proxmox Configuration
PROXMOX_HOST=192.168.10.200
PROXMOX_API_TOKEN_ID=root@pam!token-name
PROXMOX_API_TOKEN_SECRET=your-proxmox-token-secret
PROXMOX_NODE=proxmox
PROXMOX_TEMPLATE_ID=9000

# Test Configuration
TEST_VM_ID=500
TEST_VM_IP=192.168.10.200
TEST_GATEWAY=192.168.10.1
TEST_SUBNET=192.168.10.0/24
TEST_TIMEOUT=600
TEST_RETRIES=3

# Target VM Credentials
TARGET_SSH_USER=testuser
TARGET_SSH_PASSWORD=testpassword
TARGET_SUDO_PASSWORD=testpassword

# Optional: Custom test settings
# TEST_ENVIRONMENT=dev
# TEST_CLEANUP_ON_FAILURE=true
# TEST_REPORT_DIR=./reports
# TEST_LOG_LEVEL=info