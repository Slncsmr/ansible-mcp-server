# Ansible MCP Server Configuration
# Copy this file to .env and update with your values

# Proxmox Configuration
PROXMOX_HOST=192.168.1.100
PROXMOX_USER=root@pam
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_API_URL=https://192.168.1.100:8006/api2/json
PROXMOX_NODE=proxmox
PROXMOX_VERIFY_SSL=false

# For API Token authentication (alternative to password)
# PROXMOX_API_TOKEN_ID=root@pam!ansible
# PROXMOX_API_TOKEN_SECRET=your-api-token-secret

# Network Configuration
DEFAULT_GATEWAY=192.168.1.1
DEFAULT_NAMESERVER=8.8.8.8
DEFAULT_NETWORK_CIDR=24

# VM Template Configuration
UBUNTU_TEMPLATE_ID=9000
UBUNTU_TEMPLATE_NAME=ubuntu-cloud-template
UBUNTU_IMAGE_URL=https://cloud-images.ubuntu.com/jammy/current/jammy-server-cloudimg-amd64.img

# MCP Server VM Configuration
MCP_VM_ID=110
MCP_VM_NAME=mcp-server
MCP_VM_IP=192.168.1.110
MCP_VM_CORES=2
MCP_VM_MEMORY=4096
MCP_VM_DISK=20G

# Storage Configuration
DEFAULT_STORAGE=local-lvm
DEFAULT_BRIDGE=vmbr0

# Service Default Configurations
NEXTCLOUD_CORES=4
NEXTCLOUD_MEMORY=8192
NEXTCLOUD_DISK=100G

MAILSERVER_CORES=2
MAILSERVER_MEMORY=4096
MAILSERVER_DISK=50G

KEYCLOAK_CORES=2
KEYCLOAK_MEMORY=4096
KEYCLOAK_DISK=20G

# Ansible Configuration
ANSIBLE_HOST_KEY_CHECKING=False
ANSIBLE_REMOTE_USER=ubuntu

# SSH Configuration
SSH_PUBLIC_KEY_PATH=~/.ssh/id_rsa.pub

# Docker Registry (optional)
DOCKER_REGISTRY=docker.io
DOCKER_REGISTRY_USER=
DOCKER_REGISTRY_PASSWORD=

# MCP Server Settings
MCP_USER=mcp
MCP_HOME=/home/mcp
MCP_SERVER_DIR=/opt/ansible-mcp-server
NODE_VERSION=20

# Terraform Settings
TF_IN_AUTOMATION=true

# Development Settings
DEBUG=false
LOG_LEVEL=info

# SSE Server Configuration (for Windows Claude Desktop)
SSE_PORT=3001
API_ACCESS_TOKEN=your-secure-token-here
MCP_SSE_URL=http://192.168.1.110:3001/sse