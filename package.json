{
  "name": "ansible-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Ansible CLI integration",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "start:rest": "node src/rest-wrapper.js",
    "start:sse": "node src/sse-server.js",
    "dev": "node --watch src/index.js",
    "dev:rest": "node --watch src/rest-wrapper.js",
    "dev:sse": "node --watch src/sse-server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
    "test:tools": "NODE_OPTIONS='--experimental-vm-modules' jest tests/tools",
    "test:ansible": "NODE_OPTIONS='--experimental-vm-modules' jest --testNamePattern='ansible'",
    "test:service": "NODE_OPTIONS='--experimental-vm-modules' jest --testNamePattern='service'",
    "test:single": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:verbose": "NODE_OPTIONS='--experimental-vm-modules' jest --verbose",
    "test:ci": "NODE_OPTIONS='--experimental-vm-modules' jest --ci --coverage --maxWorkers=2",
    "test:old": "node --test tests/",
    "test:sse": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration/sse-mcp-integration.test.js",
    "test:sse:old": "node test-sse-server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "dotenv": "^16.5.0",
    "eventsource": "^2.0.2",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "uuid": "^9.0.0",
    "yaml": "^2.8.0",
    "zod": "^3.22.0",
    "zod-to-json-schema": "^3.22.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0"
  }
}
